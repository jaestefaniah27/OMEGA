{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}